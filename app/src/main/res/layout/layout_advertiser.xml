<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_lbl_advertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_advertiser"
        android:textSize="@dimen/title"
        app:layout_constraintBottom_toTopOf="@+id/iv_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/profile_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lbl_advertiser"
        app:srcCompat="@drawable/ic_profile"
        app:tint="@color/primaryLightColor" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/primaryLightColor"
        android:textSize="@dimen/subtitle_text"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_profile"
        tools:text="Nome UsuÃ¡rio" />

    <ImageView
        android:id="@+id/iv_first_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/full_star_image"
        app:layout_constraintBottom_toTopOf="@+id/tv_active_since"
        app:layout_constraintEnd_toStartOf="@+id/iv_second_star"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:srcCompat="@drawable/ic_full_star"
        app:tint="@color/primaryLightColor" />

    <ImageView
        android:id="@+id/iv_second_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/full_star_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_first_star"
        app:layout_constraintEnd_toStartOf="@+id/iv_third_star"
        app:layout_constraintStart_toEndOf="@+id/iv_first_star"
        app:srcCompat="@drawable/ic_full_star"
        app:tint="@color/primaryLightColor" />

    <ImageView
        android:id="@+id/iv_third_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/full_star_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_second_star"
        app:layout_constraintEnd_toStartOf="@+id/iv_fourth_star"
        app:layout_constraintStart_toEndOf="@+id/iv_second_star"
        app:srcCompat="@drawable/ic_full_star"
        app:tint="@color/primaryLightColor" />

    <ImageView
        android:id="@+id/iv_fourth_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty_star_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_third_star"
        app:layout_constraintEnd_toStartOf="@+id/iv_fifth_star"
        app:layout_constraintStart_toEndOf="@+id/iv_third_star"
        app:srcCompat="@drawable/ic_empty_star"
        app:tint="@color/primaryLightColor" />

    <ImageView
        android:id="@+id/iv_fifth_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty_star_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_fourth_star"
        app:layout_constraintEnd_toStartOf="@+id/iv_chat"
        app:layout_constraintStart_toEndOf="@+id/iv_fourth_star"
        app:srcCompat="@drawable/ic_empty_star"
        app:tint="@color/primaryLightColor" />

    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_fifth_star"
        app:layout_constraintTop_toTopOf="@+id/tv_username"
        app:tint="@color/primaryLightColor"
        app:srcCompat="@drawable/ic_chat"
        android:contentDescription="@string/chat_image" />

    <TextView
        android:id="@+id/tv_active_since"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        tools:text="No SlicedWork desde 2021" />

</androidx.constraintlayout.widget.ConstraintLayout>