<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".presentation.fragment.signup.ChooseCameraGalleryDialogFragment">

    <View
        android:id="@+id/view"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:background="@color/secondaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_camera"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_camera"
        android:drawablePadding="8dp"
        android:drawableTint="@color/secondaryColor"
        android:fontFamily="@font/roboto"
        android:gravity="start"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/lbl_take_a_picture"
        android:textAllCaps="false"
        android:textColor="@color/secondaryColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gallery"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_gallery"
        android:drawablePadding="8dp"
        android:drawableTint="@color/secondaryColor"
        android:fontFamily="@font/roboto"
        android:gravity="start"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/lbl_choose_from_gallery"
        android:textAllCaps="false"
        android:textColor="@color/secondaryColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera" />


</androidx.constraintlayout.widget.ConstraintLayout>