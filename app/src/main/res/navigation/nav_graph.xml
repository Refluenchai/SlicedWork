<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/homeFragment">
    <!--Home-->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.slicedwork.slicedwork.presentation.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
        <action
            android:id="@+id/action_homeFragment_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_homeFragment_to_announcedVacanciesFragment"
            app:destination="@id/announcedVacanciesFragment" />
    </fragment>
    <!--Vacancy-->
    <fragment
        android:id="@+id/vacancyFragment"
        android:name="com.slicedwork.slicedwork.presentation.vacancy.VacancyFragment"
        android:label="VacancyFragment"
        tools:layout="@layout/fragment_vacancy">
        <argument
            android:name="vacancy"
            app:argType="com.slicedwork.slicedwork.domain.model.Vacancy" />
    </fragment>
    <!--Nested Login-->
    <navigation android:id="@+id/login"
        app:startDestination="@id/loginFragment">
        <!--Login-->
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.slicedwork.slicedwork.presentation.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment" />
        </fragment>
        <!--Register-->
        <fragment
            android:id="@+id/registerFragment"
            android:name="com.slicedwork.slicedwork.presentation.register.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register" />
    </navigation>
    <!--AnnouncedVacancies-->
    <fragment
        android:id="@+id/announcedVacanciesFragment"
        android:name="com.slicedwork.slicedwork.presentation.announcedvacancies.AnnouncedVacanciesFragment"
        android:label="fragment_announced_vacancies"
        tools:layout="@layout/fragment_announced_vacancies" />
</navigation>