<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/greetingsFragment">

    <fragment
        android:id="@+id/greetingsFragment"
        android:name="com.slicedwork.slicedwork.presentation.fragment.GreetingsFragment"
        android:label=""
        tools:layout="@layout/fragment_greetings" >
        <action
            android:id="@+id/action_greetingsFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_greetingsFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.slicedwork.slicedwork.presentation.fragment.SignInFragment"
        android:label=""
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.slicedwork.slicedwork.presentation.fragment.SignUpFragment"
        android:label=""
        tools:layout="@layout/fragment_sign_up" />
</navigation>