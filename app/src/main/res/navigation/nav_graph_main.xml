<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/greetingsFragment">

    <!--Greetings-->
    <fragment
        android:id="@+id/greetingsFragment"
        android:name="com.slicedwork.slicedwork.presentation.fragment.GreetingsFragment"
        android:label=""
        tools:layout="@layout/fragment_greetings">
        <action
            android:id="@+id/action_greetingsFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_greetingsFragment_to_signUp"
            app:destination="@id/signUp" />
    </fragment>

    <!--Sign In-->
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.slicedwork.slicedwork.presentation.fragment.SignInFragment"
        android:label=""
        tools:layout="@layout/fragment_sign_in" />

    <navigation
        android:id="@+id/signUp"
        app:startDestination="@id/getNameFragment">
        <!--Get Name-->
        <fragment
            android:id="@+id/getNameFragment"
            android:name="com.slicedwork.slicedwork.presentation.fragment.GetNameFragment"
            android:label=""
            tools:layout="@layout/fragment_get_name">
            <action
                android:id="@+id/action_getNameFragment_to_getBirthdayFragment"
                app:destination="@id/getBirthdayFragment"
                app:popUpTo="@id/getNameFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <!--Get Birthday-->
        <fragment
            android:id="@+id/getBirthdayFragment"
            android:name="com.slicedwork.slicedwork.presentation.fragment.GetBirthdayFragment"
            android:label=""
            tools:layout="@layout/fragment_get_birthday" >
            <argument
                android:name="user"
                app:argType="com.slicedwork.slicedwork.domain.model.User" />
            <action
                android:id="@+id/action_getBirthdayFragment_to_getGenderFragment"
                app:destination="@id/getGenderFragment"
                app:popUpTo="@id/getNameFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/getGenderFragment"
            android:name="com.slicedwork.slicedwork.presentation.fragment.GetGenderFragment"
            android:label="fragment_get_gender"
            tools:layout="@layout/fragment_get_gender" >
            <argument
                android:name="user"
                app:argType="com.slicedwork.slicedwork.domain.model.User" />
        </fragment>
    </navigation>
</navigation>