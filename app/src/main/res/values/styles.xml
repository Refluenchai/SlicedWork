<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BottomSheet-->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@drawable/shape_round_upper_corner</item>
    </style>

    <!--TextInputLayout-->


    <!--Button-->
    <style name="CommonButton">
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--TextView-->
    <style name="AppNameLetter">
        <item name="android:textSize">@dimen/app_name_letter_size</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>