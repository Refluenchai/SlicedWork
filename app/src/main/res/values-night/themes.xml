<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Common-->
    <style name="Theme.SlicedWork" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <!--SplashScreen-->
    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.SlicedWork</item>
        <item name="statusBarForeground">@color/primaryTextColor</item>
    </style>

    <!--Button-->
    <style name="CommonButton">
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--TextView-->
    <style name="AppNameLetter">
        <item name="android:textSize">@dimen/app_name_letter_size</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>