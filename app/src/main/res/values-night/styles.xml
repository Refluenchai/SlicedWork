<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BottomSheet-->
    <style
        name="ThemeOverlay.Demo.BottomSheetDialog"
        parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Demo.BottomSheet</item>
    </style>

    <style name="Widget.Demo.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheetDialog</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheetDialog" parent="">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
    </style>

    <!--TextInputLayout-->
    <style name="Widget.SlicedWork.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.SlicedWork.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
    </style>

    <style name="TextAppearance.SlicedWork.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <!--Button-->
    <style name="CommonButton">
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--TextView-->
    <style name="AppNameLetter">
        <item name="android:textSize">@dimen/app_name_letter_size</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>